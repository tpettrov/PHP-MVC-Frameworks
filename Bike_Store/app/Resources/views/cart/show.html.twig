{% extends 'base.html.twig' %}

{% block content %}
    <h1>Cart</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if cart.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Products</th>
                <td>{{ include(':product:show_in_cart.html.twig') }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_index') }}">Back to the shop</a>
        </li>
    </ul>
{% endblock %}
