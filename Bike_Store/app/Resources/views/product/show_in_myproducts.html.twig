{% extends 'base.html.twig' %}



{% block content %}

    <h1>My Products</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Number</th>
            <th>Model</th>
            <th>Price</th>
            <th>Image</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>

        {% for key, product in products %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ key+1 }}</a></td>
                <td>{{ product.model }}</td>
                {% if calculator.calculate(product) != product.price %}

                    <td>
                        <del>{{ product.price }}</del>
                        <p class="alert-danger">{{ calculator.calculate(product) }}</p></td>

                {% else %}

                    <td>{{ product.price }}</td>
                {% endif %}
                <td>{{ product.image }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.quantity }}</td>
                <td>
                    {% if product.forsale == false %}

                        <a class="btn btn-primary" href="{{ path('switch_sale', { 'id': product.id }) }}">Sale</a>


                    {% else %}


                        <a class="btn btn-danger" href="{{ path('switch_sale', { 'id': product.id }) }}">Stop Sale</a>
                    {% endif %}

                </td>
            </tr>
        {% endfor %}

        </tbody>

    </table>



{% endblock %}